<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imv_filter"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="110dp"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:elevation="10dp"
        android:visibility="gone"
        app:srcCompat="@drawable/icon_filter" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/layout_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:gravity="center"
        android:background="@drawable/border">

        <EditText
            android:id="@+id/edt_search"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/border_white"
            android:hint="@string/search_location"
            android:paddingHorizontal="10dp"
            android:textColor="@color/black2"
            android:textSize="16sp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:ellipsize="end"/>

        <ImageView
            android:id="@+id/imv_drop"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_drop"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_search"
        android:paddingHorizontal="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_search_around"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:text="@string/search_around"
            android:textColor="@color/black2"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:text="@string/history_search"
            android:textColor="@color/black2"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"/>

        <ListView
            android:id="@+id/lv_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_search"
            android:layout_marginBottom="40dp"
            android:divider="@color/gray"
            android:dividerHeight="0.5dp"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/container_list_room"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:padding="5dp"
        android:layout_below="@+id/layout_search"/>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#30000000"
            android:visibility="gone"/>
    </FrameLayout>

</RelativeLayout>
