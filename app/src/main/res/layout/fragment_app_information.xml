<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <ImageView
                android:id="@+id/imV_back"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@color/white"
                app:srcCompat="@drawable/ic_back" />

            <TextView
                android:id="@+id/textView"
                android:layout_weight="0.8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="2dp"
                android:text="@string/information"
                android:textSize="22sp"
                android:textColor="@color/blue2"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@color/white"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:paddingVertical="1dp"
                android:background="@color/white"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imV_top"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="20dp"
            android:src="@drawable/logo" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>

        <TextView
            android:id="@+id/tv_share_app"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/border_bottom"
            android:text="@string/share_app"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:fontFamily="sans-serif"
            android:textColor="@color/blue2"/>

        <TextView
            android:id="@+id/tv_submit_app_review"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/border_bottom"
            android:text="@string/submit_app_review"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:fontFamily="sans-serif"
            android:textColor="@color/blue2"/>


        <TextView
            android:id="@+id/tv_submit_feedback_reports"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/border_bottom"
            android:text="@string/submit_feedback_reports"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:fontFamily="sans-serif"
            android:textColor="@color/blue2"/>

        <TextView
            android:id="@+id/tv_app_homepage"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/border_bottom"
            android:text="@string/app_homepage"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:fontFamily="sans-serif"
            android:textColor="@color/blue2"/>

        <TextView
            android:id="@+id/tv_similar_app"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/border_bottom"
            android:text="@string/similar_app"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:fontFamily="sans-serif"
            android:textColor="@color/blue2"/>

        <TextView
            android:id="@+id/tv_about_us"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/border_bottom"
            android:text="@string/about_us"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:fontFamily="sans-serif"
            android:textColor="@color/blue2"/>

    </LinearLayout>

</LinearLayout>