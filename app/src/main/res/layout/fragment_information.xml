<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_margin="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="@string/post_type"
            android:textSize="16sp"
            android:textColor="@color/black2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_rent_room"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/border_left"
                android:backgroundTint="@color/blue2"
                android:paddingHorizontal="5dp"
                android:text="@string/rent_room"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:clickable="true"
                android:focusable="false"/>

            <TextView
                android:id="@+id/tv_share_room"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:paddingHorizontal="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:background="@drawable/border_right"
                android:text="@string/share_room"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/blue2"
                android:clickable="true"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:text="@string/room_type"
            android:textSize="16sp"
            android:textColor="@color/black2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_room"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/border_left"
                android:backgroundTint="@color/blue2"
                android:text="@string/room"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:ellipsize="end"
                android:maxLines="1"
                android:clickable="true"/>

            <TextView
                android:id="@+id/tv_apartment"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/border_square"
                android:text="@string/apartment"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/blue2"
                android:ellipsize="end"
                android:maxLines="1"
                android:clickable="true"/>

            <TextView
                android:id="@+id/tv_mini_apartment"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/border_square"
                android:text="@string/mini_apartment"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/blue2"
                android:ellipsize="end"
                android:maxLines="1"
                android:clickable="true"/>

            <TextView
                android:id="@+id/tv_house"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:background="@drawable/border_right"
                android:text="@string/house"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/blue2"
                android:clickable="true"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/room_price"
                android:textSize="16sp"
                android:gravity="left"
                android:textColor="@color/black2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/room_area"
                android:textSize="16sp"
                android:gravity="right"
                android:textColor="@color/black2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edt_room_price"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@drawable/border"
                android:hint="@string/room_price_hint"
                android:inputType="number"
                android:paddingHorizontal="15dp"
                android:textColor="@color/black2"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edt_room_area"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:background="@drawable/border"
                android:hint="@string/room_area_hint"
                android:inputType="number"
                android:paddingHorizontal="15dp"
                android:textColor="@color/black2"
                android:textSize="16sp" />

        </LinearLayout>

