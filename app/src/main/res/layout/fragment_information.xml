        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/room_utilities"
            android:textSize="16sp"
            android:textColor="@color/black2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imv_wifi"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_wifi"
                        app:tint="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/tv_wifi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/utility1"
                        android:textSize="14sp"
                        android:paddingTop="2dp"
                        android:textAlignment="center"
                        android:textColor="@android:color/darker_gray" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imv_wc"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_wc"
                        app:tint="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/tv_wc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/utility2"
                        android:textSize="14sp"
                        android:paddingTop="2dp"
                        android:textAlignment="center"
                        android:textColor="@android:color/darker_gray" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imv_parking"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_parking"
                        app:tint="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/tv_parking"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/utility3"
                        android:textSize="14sp"
                        android:paddingTop="2dp"
                        android:textAlignment="center"
                        android:textColor="@android:color/darker_gray" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imv_free_time"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_free_time"
                        app:tint="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/tv_free_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/utility4"
                        android:textSize="14sp"
                        android:paddingTop="2dp"
                        android:textAlignment="center"
                        android:textColor="@android:color/darker_gray" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imv_kitchen"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_kitchen"
                        app:tint="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/tv_kitchen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/utility5"
                        android:textSize="14sp"
                        android:paddingTop="2dp"
                        android:textAlignment="center"
                        android:textColor="@android:color/darker_gray" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imv_air_conditioner"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_air_conditioner"
                        app:tint="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/tv_air_conditioner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/utility6"
                        android:textSize="14sp"
                        android:paddingTop="2dp"
                        android:textAlignment="center"
                        android:textColor="@android:color/darker_gray" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imv_fridge"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_fridge"
                        app:tint="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/tv_fridge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/utility7"
                        android:textSize="14sp"
                        android:paddingTop="2dp"
                        android:textAlignment="center"
                        android:textColor="@android:color/darker_gray" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imv_washing_machine"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_washing_machine"
                        app:tint="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/tv_washing_machine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/utility8"
                        android:textSize="14sp"
                        android:paddingTop="2dp"
                        android:textAlignment="center"
                        android:textColor="@android:color/darker_gray" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
