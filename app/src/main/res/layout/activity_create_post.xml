<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingBottom="1dp"
        android:background="@drawable/bottom_border"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_weight="1.2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="16dp"
            android:text="@string/cancel"
            android:textSize="16sp"
            android:textColor="@color/red"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical|left"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="5dp"
            android:text="@string/create_post_title"
            android:textSize="20sp"
            android:textColor="@color/blue2"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/tv_next"
            android:layout_weight="1.2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="16dp"
            android:text="@string/next"
            android:textSize="16sp"
            android:textColor="@color/blue2"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical|right"
            android:background="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:orientation="vertical"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:paddingHorizontal="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/background_address"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:background="@drawable/icon_incomplete_step">
                    <ImageView
                        android:id="@+id/imv_address"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/icon_current_step"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/background_information"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:background="@drawable/icon_incomplete_step">

                    <ImageView
                        android:id="@+id/imv_information"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/background_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:background="@drawable/icon_incomplete_step">

                    <ImageView
                        android:id="@+id/imv_image"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/background_confirm"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:background="@drawable/icon_incomplete_step">

                    <ImageView
                        android:id="@+id/imv_confirm"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/address"
                    android:textSize="14sp"
                    android:textColor="@color/blue2"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:background="@color/white"/>

                <TextView
                    android:id="@+id/tv_information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/information"
                    android:textSize="14sp"
                    android:textColor="@color/black2"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:background="@color/white"/>

                <TextView
                    android:id="@+id/tv_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/image"
                    android:textSize="14sp"
                    android:textColor="@color/black2"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:background="@color/white"/>

                <TextView
                    android:id="@+id/tv_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/confirm"
                    android:textSize="14sp"
                    android:textColor="@color/black2"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:background="@color/white"/>

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"/>

    </LinearLayout>


</LinearLayout>
